#version 450

struct particleData
{
	vec4 position;
	vec4 veclocity;
	vec4 colour;	
	vec4 alphaAge;	
	//float isAlpha;
	//float gravityMult;
	//float damping;
};

layout(std430, binding = 0) buffer data
{
	particleData particles[];
};

layout(local_size_x = 128, local_size_y = 1, local_size_z = 1) in;

uniform float deltaTime;
uniform float age;


void main()
{
	uint gid = gl_GlobalInvocationID.x;	
	
	const float dt = deltaTime;
	const vec3 gravity = vec3(0.0f, -10.5f, 0.0f);
	vec3 force = gravity * 0.2f;// * particles[gid].gravityMult;
	vec3 acc = force / 20.0f;
	
	vec3 p = particles[gid].position.xyz;
	vec3 v = particles[gid].veclocity.xyz;
	
	particles[gid].alphaAge.y -= dt;
	if(particles[gid].alphaAge.y < 0)
	{
		particles[gid].position.xyz = vec3(0.0f, 0.0f, 0.0f);
		particles[gid].alphaAge.y = age;
	}
	
	particles[gid].position.xyz += v * dt;
	particles[gid].veclocity.xyz += gravity * 0.0001;
	particles[gid].veclocity.xyz += acc * dt * 0.1f;
	//particles[gid].veclocity.xyz *= particles[gid].damping;
	particles[gid].alphaAge.x = 0.0f;
}